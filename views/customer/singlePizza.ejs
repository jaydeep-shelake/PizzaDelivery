<div class="container mx-auto flex justify-center items-center">
    <div class="w-70">
  <div class="pizza ">
    <img src="img/<%=pizza.image %>" alt="pizza-1" class= "mb-4 h-64 w-64 mx-auto">
  </div>
  
        <div class="text-center">
            <h2 class="mb-4 text-5xl"><%= pizza.name %></h2>
            <span class=" size py-1 px-4 rounded-full uppercase text-xl"><%= pizza.size %></span>
            <div class="flex items-center justify-evenly mt-4">
                <span class="font-bold text-3xl"><%= pizza.price %> rs</span>
                <button data-pizza="<%= JSON.stringify(pizza) %>" class="btn-cart rounded-full p-2 flex items-center font-bold"><span>+</span><span>add</span></button>
            </div>
            <button class="order-btn p-2 mt-5 text-white rounded" id="addComment">Add comment</button>
        </div>
    </div>
</div>
   <div class="modal-con" id="modalArea">
    <form action="/<%= pizza._id %>" method="POST" class=" modal container mx-auto w-1/3 p-4">
        <div class="mb-4">
            <label class="block text-grey-darker text-sm font-bold mb-2" for="comment">
              Comment
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" id="comment" type="text" placeholder="Comment" name="comment">
          </div>
          <button class="order-btn text-white font-bold py-2 px-4 rounded" type="submit">
            Add
          </button>
    </form>
</div>
</div>
